# -*- conf -*-

server {
  listen 0.0.0.0:80;
  server_name 78.46.63.223;
  rewrite ^ http://projectx.analyticsfire.com$request_uri permanent;
}

server {
  listen 0.0.0.0:80;
<% if File.exist? '/etc/ssl/private/star_analyticsfire_com.key' -%>  
  listen 0.0.0.0:443 ssl;

  ssl_certificate_key /etc/ssl/private/star_analyticsfire_com.key;
  ssl_certificate /etc/ssl/certs/star_analyticsfire_com.pem;
<% end -%>

  server_name projectx.analyticsfire.com;
  root /srv/afdatabackend/current/public;
  try_files $uri/index.html $uri.html $uri @app;
  client_max_body_size 512M;

  auth_basic "restricted";
  auth_basic_user_file /srv/afdatabackend/shared/config/htpasswd;

  location @app {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Host $http_host;
    proxy_redirect off;

    proxy_pass http://127.0.0.1:<%= node['af']['databackend']['unicorn_port'] %>;
  }
}
